{
  "name": "@music-service/api",
  "version": "1.0.0",
  "description": "Music service authentication API (Lambda + API Gateway)",
  "private": true,
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/handlers/auth-session.ts",
    "build": "npm run clean && npm run compile && npm run package",
    "compile": "tsc && node scripts/post-build.js",
    "package": "cd dist && zip -r auth-session.zip . && cd ..",
    "clean": "rm -rf dist *.zip",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.700.0",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.145",
    "@types/node": "^22.0.0",
    "esbuild": "^0.24.0",
    "tsx": "^4.0.0",
    "typescript": "^5.6.0",
    "vitest": "^3.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
