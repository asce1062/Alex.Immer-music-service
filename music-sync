#!/usr/bin/env python3
"""
Music Sync Tool Launcher

Quick launcher that automatically chooses the right mode:
- With arguments: Run direct CLI
- Without arguments: Launch interactive REPL

Usage:
  ./music-sync                           # Launch interactive REPL
  ./music-sync sanitize --dry-run        # Run command directly
  ./music-sync publish --with-thumbs     # Run command directly
"""

import sys
from pathlib import Path

# Add scripts directory to path
scripts_dir = Path(__file__).parent / "scripts"
sys.path.insert(0, str(scripts_dir))

if len(sys.argv) > 1:
    # Arguments provided, use direct CLI
    import music_sync
    music_sync.main()
else:
    # No arguments, launch interactive REPL
    import music_sync_cli
    music_sync_cli.main()
